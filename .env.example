# Configuration Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=config/google_credentials.json
YOUTUBE_CREDENTIALS=config/youtube_credentials.json

# Configuration AWS (optionnel)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Configuration de l'application
ENVIRONMENT=development  # ou 'production'
LOG_LEVEL=INFO

# Configuration de la base de données (si applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=youtube_automation
# DB_USER=user
# DB_PASSWORD=password

# Configuration du cache (optionnel)
# REDIS_URL=redis://localhost:6379/0

# Configuration des limites d'API
# YOUTUBE_API_QUOTA_LIMIT=10000

# Configuration des notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/...
# EMAIL_NOTIFICATIONS_ENABLED=false
# ADMIN_EMAIL=admin@example.com

# SEO avancé (YouTube Data API) — ne pas compromettre dans le dépôt
# Utilisé par src/seo_optimizer.py si config.video.yaml -> seo_advanced.youtube_api_key est null
# Priorité: SEO_YOUTUBE_API_KEY, puis YOUTUBE_DATA_API_KEY
# SEO_YOUTUBE_API_KEY=your_youtube_data_api_key_here
# YOUTUBE_DATA_API_KEY=your_youtube_data_api_key_here

# Notifications email (placeholder)
# Utilisé par config/video.docker.yaml -> notifications.email.password_env
EMAIL_PASSWORD=
